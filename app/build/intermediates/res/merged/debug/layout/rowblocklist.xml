<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:orientation="vertical" android:layout_width="fill_parent"
 android:layout_height="fill_parent" android:paddingTop="10sp"
 android:background="#FFFFFF">
    		<TableLayout
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/firsttab"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:layout_marginRight="10sp"
				android:stretchColumns="3"  android:background="#ffffff">


				<TableRow>
				    <TextView android:id="@+id/Block" android:text="Block"
				         android:layout_width="70sp" android:textSize="18sp" android:layout_gravity="center"
				         android:layout_column="0"
				         android:layout_height="wrap_content"/>
					
					<TextView android:id="@+id/Village"
					    android:layout_width="wrap_content" android:layout_column="1"
					    android:textSize="18sp" android:layout_height="wrap_content"/>
				    
					<TextView android:id="@+id/Union"
				         android:layout_width="100dip"
				         android:layout_height="wrap_content"
				         android:layout_column="2" android:layout_span="2"/>
				    <Button
				        android:id="@+id/cmdSelectBlock"
				        android:layout_width="70sp"  android:textSize="18sp"
				        android:layout_height="wrap_content" android:layout_marginRight="3sp"
				        android:text="HH"/>
										
				</TableRow>
				<View android:layout_height="2dip" android:background="#CCCCCC" />	
		</TableLayout>  
			
			
			  						
 </RelativeLayout>
 
