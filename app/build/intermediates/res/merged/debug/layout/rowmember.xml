<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:paddingTop="10dip"
     android:paddingBottom="10dip"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal">

	 <Button
	     android:id="@+id/cmdB1"
	     android:layout_width="50sp"
	     android:background="#ffd866"
	     android:layout_height="40sp"
	     android:text="edit"/>	
	<TextView android:text=" "
         android:layout_width="20dp"  
         android:gravity="center"
         android:layout_height="wrap_content"/>
	 
	 <Button
	     android:id="@+id/cmdB2"
	     android:layout_width="50sp"
	     android:background="#00B7FB"
	     android:layout_height="40sp"
	     android:textColor="#FFFFFF"
	     android:text="del"/>
	 
	<TextView android:id="@+id/SL"
         android:layout_width="80dp"  
         android:gravity="center"
         android:layout_height="wrap_content"/>
	
     <TextView android:id="@+id/Name"
         android:layout_width="200dp"     
         android:layout_height="wrap_content"/>
 
     <TextView android:id="@+id/DOB"
         android:layout_width="200dp" 
		 android:gravity="center"     
         android:layout_height="wrap_content" android:layout_weight="1"/>
 
     <TextView android:id="@+id/Gender"         
         android:layout_width="100dp"
         android:gravity="center"
         android:layout_height="wrap_content"  android:layout_weight="1"/>
     
     <TextView android:id="@+id/Relationship"        
         android:layout_width="250dp"
		 android:gravity="center"  
         android:layout_height="wrap_content"  android:layout_weight="1"/>
     
     <TextView android:id="@+id/MSL"        
         android:layout_width="170dp"
		 android:gravity="center"
         android:layout_height="wrap_content"  android:layout_weight="1"/>
    
     <TextView android:id="@+id/FSL"         
         android:layout_width="150dp"
		 android:gravity="center"  
         android:layout_height="wrap_content"  android:layout_weight="1"/>
    
     <TextView android:id="@+id/MaritalStatus"
         android:layout_width="250dp"       
		 android:gravity="center" 
         android:layout_height="wrap_content"  android:layout_weight="1"/>
     
     <TextView android:id="@+id/SSL"
         android:layout_width="170dp"   
		 android:gravity="center"     
         android:layout_height="wrap_content"  android:layout_weight="1"/>
     
     <TextView android:id="@+id/Edu"
         android:layout_width="280dp" 
		 android:gravity="center"      
         android:layout_height="wrap_content"  android:layout_weight="1"/>
     
     <TextView android:id="@+id/Ocp"
         android:layout_width="450dp"
		 android:gravity="center" 
         android:layout_height="wrap_content"  android:layout_weight="1"/>
     
     
</LinearLayout>

 