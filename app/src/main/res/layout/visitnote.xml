<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

	<LinearLayout android:orientation="vertical" android:layout_width="fill_parent"    android:layout_marginLeft="10sp" android:layout_marginRight="10sp"    android:layout_height="wrap_content" android:scrollbars="vertical">
	    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" style="@style/rowStyle0">        
			<TextView android:text="Note:" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
	   	</LinearLayout>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" style="@style/rowStyle0">        
			<EditText android:id="@+id/txtVisitNote" android:maxLength="150" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/customEdit"
			     android:inputType="textMultiLine" android:maxLines="8" android:lines="8"
			     android:scrollbars="vertical" android:gravity="top|left"/>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" style="@style/rowStyle0">        
		<Button
		        android:id="@+id/cmdVisitNoteSave"
		        android:layout_width="150sp"
		        android:layout_height="wrap_content"
		        android:layout_gravity="left"
		        android:layout_marginTop="10dp"
		        android:text="Save" />	
				<Button
		        android:id="@+id/cmdVisitNoteClose"
		        android:layout_width="150sp"
		        android:layout_height="wrap_content"
		        android:layout_gravity="right"
		        android:layout_marginTop="10dp"
		        android:text="Close" />		
				        	
	</LinearLayout>		
</LinearLayout>
