<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" android:background="#D7D7D7" >


    <LinearLayout android:background="#ffffff" android:orientation="horizontal" android:layout_width="match_parent"    android:layout_marginLeft="10sp" android:layout_marginRight="10sp"    android:layout_height="wrap_content" android:scrollbars="vertical">
        <ImageView
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:id="@+id/imageView" android:src="@drawable/gps" />
        <TextView android:layout_marginTop="25sp" android:layout_marginLeft="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPS Information"
            android:id="@+id/textView"
            android:textColor="#000000" android:background="#FFFFFF"
            android:textSize="25dp" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"    android:layout_marginLeft="10sp" android:layout_marginRight="10sp"    android:layout_height="wrap_content" android:scrollbars="vertical">
        <TextView
            android:layout_width="match_parent"
            android:gravity="center_horizontal|top"
            android:layout_height="wrap_content"
            android:text="ID Number"
            android:textColor="#000000"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"    android:layout_marginLeft="10sp" android:layout_marginRight="10sp"    android:layout_height="wrap_content" android:scrollbars="vertical">

        <EditText style="@style/customEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextUserID"
            android:textColor="#006699"
            android:gravity="center_horizontal|top"
            android:editable="false" android:layout_marginLeft="20sp"  android:layout_marginRight="20sp" />
    </LinearLayout>
    <View android:layout_width="wrap_content" android:layout_height="2dip" android:background="#CCCCCC" android:layout_marginTop="10sp" />
    <LinearLayout android:layout_marginTop="5sp" android:layout_marginLeft="10sp" android:layout_marginRight="10sp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" style="@style/rowStyle0">

        <TextView
            android:layout_width="140sp"
            android:layout_height="wrap_content"
            android:text="Longitude"
            android:id="@+id/textView44"
            android:textColor="#000000"
            android:textSize="25dp"
            android:layout_gravity="center_horizontal|top"/>

        <EditText android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextLatitude"
            android:textColor="#006699"
            android:background="#ffffff"
            android:editable="false"
            android:text="0" />
    </LinearLayout>

    <LinearLayout android:layout_marginTop="5sp" android:layout_marginLeft="10sp" android:layout_marginRight="10sp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" style="@style/rowStyle0">

        <TextView
            android:layout_width="140sp"
            android:layout_height="wrap_content"
            android:text="Latitude"
            android:id="@+id/textView33"
            android:textColor="#000000"
            android:textSize="25dp" />

        <EditText android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextLongitude"
            android:textColor="#006699"
            android:background="#ffffff"
            android:editable="false"
            android:layout_gravity="center_horizontal|top"
            android:text="0" />


    </LinearLayout>
    <LinearLayout android:layout_marginTop="5sp"  android:layout_marginLeft="10sp" android:layout_marginRight="10sp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" style="@style/rowStyle0">
    <TextView
        android:layout_width="140sp"
        android:layout_height="wrap_content"
        android:text="Accuracy"
        android:id="@+id/textView2"
        android:textSize="25dp"
        android:textColor="#000000"/>

        <EditText android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextAccuracy"
            android:textColor="#006699"
            android:background="#ffffff"
            android:editable="false"
            android:text="0" />

    </LinearLayout>
    <LinearLayout android:layout_marginTop="5sp"  android:layout_marginLeft="10sp" android:layout_marginRight="10sp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" style="@style/rowStyle0">

        <TextView
        android:layout_width="140sp"
        android:layout_height="wrap_content"
        android:text="Satelites"
        android:id="@+id/textView3"
        android:textColor="#000000"
        android:textSize="25dp"/>

        <EditText android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextSatelite"
            android:textColor="#006699"
            android:background="#ffffff"
            android:editable="false"
            android:text="0" />
    </LinearLayout>
    <View android:layout_width="wrap_content" android:layout_height="1dip" android:background="#CCCCCC" />
    <LinearLayout android:layout_marginTop="5sp"  android:layout_marginLeft="10sp" android:layout_marginRight="10sp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" style="@style/rowStyle0">
        <TextView
            android:layout_width="160sp"
            android:layout_height="wrap_content"
            android:text="Location Type:"
            android:id="@+id/textView5"
            android:textColor="#000000"
            android:textSize="20dp" />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/radioGroupLocType"
            android:background="#ffffff">

            <RadioButton
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:text="BARI"
                android:id="@+id/radioButtonBari"
                android:textColor="#000000"
                android:checked="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LANDMARK"
                android:id="@+id/radioButtonLandmark"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:checked="false" />

        </RadioGroup>
    </LinearLayout>
    <View android:layout_width="wrap_content" android:layout_height="1dip" android:background="#CCCCCC" />
    <LinearLayout android:id="@+id/secLand1" android:layout_marginLeft="10sp" android:layout_marginRight="10sp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" style="@style/rowStyle0">
        <TextView
            android:layout_width="160sp"
            android:layout_height="wrap_content"
            android:text="Landmark Type"
            android:id="@+id/textView6"
            android:textColor="#000000"
            android:textSize="20dp"/>
        <Spinner style="@style/customEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerLandType"
            android:spinnerMode="dropdown"
            android:entries="@array/spinnerItemsLandmark"/>

    </LinearLayout>
    <View android:layout_width="wrap_content" android:layout_height="1dip" android:background="#CCCCCC" />
    <LinearLayout android:id="@+id/secLand2" android:layout_marginLeft="10sp" android:layout_marginRight="10sp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" style="@style/rowStyle0">
        <TextView
            android:layout_width="160sp"
            android:layout_height="wrap_content"
            android:text="Landmark Name"
            android:id="@+id/textView4"
            android:textSize="20dp"
            android:textColor="#000000"/>
        <EditText style="@style/customEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextLandName"
            android:textColor="#000000"/>

    </LinearLayout>
    <View android:layout_width="wrap_content" android:layout_height="1dip" android:background="#CCCCCC" />
    <LinearLayout android:id="@+id/secLand3" android:layout_marginLeft="10sp" android:layout_marginRight="10sp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" style="@style/rowStyle0">
        <TextView
            android:layout_width="160sp"
            android:layout_height="wrap_content"
            android:text="Establised"
            android:id="@+id/textView7"
            android:textColor="#000000"
            android:textSize="20dp"/>
        <EditText style="@style/customEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextLandEstablised"
            android:textColor="#000000"/>

    </LinearLayout>
    <View android:layout_width="wrap_content" android:layout_height="1dip" android:background="#CCCCCC" />
    <LinearLayout android:id="@+id/secLand4" android:layout_marginLeft="10sp" android:layout_marginRight="10sp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" style="@style/rowStyle0">
        <TextView
            android:layout_width="160sp"
            android:layout_height="wrap_content"
            android:text="Contact No"
            android:id="@+id/textView8"
            android:textColor="#000000"
            android:textSize="20dp" />
        <EditText style="@style/customEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editTextContactNo"
            android:textColor="#000000" />

    </LinearLayout>
    <View android:layout_width="wrap_content" android:layout_height="1dip" android:background="#CCCCCC" />
    <LinearLayout android:id="@+id/secLand5" android:layout_marginLeft="10sp" android:layout_marginRight="10sp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" style="@style/rowStyle0">
        <TextView
            android:layout_width="160sp"
            android:layout_height="wrap_content"
            android:text="Note"
            android:id="@+id/textView9"
            android:textColor="#000000"
            android:textSize="20dp"/>
        <EditText style="@style/customEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editTextNote"
            android:textColor="#000000"
            android:maxLines="10" />

    </LinearLayout>
    <View android:layout_width="wrap_content" android:layout_height="1dip" android:background="#CCCCCC" />
    <LinearLayout android:layout_weight="2" android:layout_marginLeft="10sp" android:layout_marginRight="10sp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" style="@style/rowStyle0">
        <Button android:layout_weight="1" android:id="@+id/buttonSave"  android:background="@drawable/button_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10sp"
            android:text="Save" android:textColor="#000000"/>
        <Button android:layout_weight="1" android:layout_marginLeft="20sp" android:id="@+id/buttonClose"  android:background="@drawable/button_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10sp"
            android:text="Close" android:textColor="#000000"/>

    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" style="@style/rowStyle0">
    </LinearLayout>

</LinearLayout>
